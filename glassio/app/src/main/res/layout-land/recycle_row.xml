<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/recycler_view_landscape_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:fontFamily="sans-serif-condensed"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/item_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/recycler_view_landscape_width"
        android:layout_height="160dp"
        android:layout_marginEnd="@dimen/recycler_margin"
        app:srcCompat="@drawable/glasseseleven" />

    <TextView
        android:id="@+id/frame"
        android:background="@color/light_gray"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/item_descriptors"
        android:textColor="@color/white"
        android:layout_width="@dimen/recycler_view_landscape_width"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/colorr"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:background="@color/light_gray"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/item_descriptors"
        android:textColor="@color/white"
        android:layout_width="@dimen/recycler_view_landscape_width"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/type"
        android:layout_width="@dimen/recycler_view_landscape_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:background="@color/light_gray"
        android:fontFamily="sans-serif-condensed"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/item_descriptors" />

    <TextView
        android:id="@+id/price"
        android:layout_width="@dimen/recycler_view_landscape_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:fontFamily="sans-serif-condensed"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/priceSize_LS" />

</LinearLayout>