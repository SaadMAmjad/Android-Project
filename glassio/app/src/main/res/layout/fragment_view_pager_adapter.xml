<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewPagerAdapter">


    <ImageView
        android:id="@+id/stuff"

        android:layout_width="@dimen/image_widthDetail"
        android:layout_gravity="center"
        android:layout_height="@dimen/image_heightDetail"
        android:src="@drawable/glasseseight" />

    <TextView
        android:id="@+id/answer"
        android:textSize="@dimen/main_header"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:text="@string/cant_see_it" />


</LinearLayout>