<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="189dp"
        android:layout_height="111dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/item_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_margin="5dp"
        android:layout_marginEnd="@dimen/recycler_margin"
        app:srcCompat="@drawable/glasseseleven" />

    <TextView
        android:id="@+id/frame"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/item_descriptors" />

    <TextView
        android:id="@+id/colorr"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/item_descriptors" />

    <TextView
        android:id="@+id/type"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/item_descriptors" />

    <TextView
        android:id="@+id/price"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recycler_margin"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:text="Placeholder"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/priceSize" />

</LinearLayout>